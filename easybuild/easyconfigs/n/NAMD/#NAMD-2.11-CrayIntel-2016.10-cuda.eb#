prebuildopts += ' cd .. && '
prebuildopts += ' unset CXX; unset CC && '
prebuildopts += ' CFLAGS="$CFLAGS -L/opt/cray/pe/pmi/5.0.10-1.0000.11050.0.0.ari/lib64 -lpmi"'
prebuildopts += ' ./config CRAY-XC-intel.cuda Eos --with-cuda --with-fftw3 --tcl-prefix $EBROOTTCL --charm-base `pwd`/charm-6.7.0 --charm-arch gni-crayxc-smp --cxx-opts -static && '
prebuildopts += ' cd CRAY-XC-intel && '

builddependencies = [
    ('fftw/3.3.4.10', EXTERNAL_MODULE),
